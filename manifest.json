{
  "name": "Grindelwald",
  "version": "2.0",
  "description": "Monitor your life!",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.facebook.com/*","*://www.messenger.com/*"],
      "js": ["background.js"]
    }
  ],
  "options_ui": {
    "page": "options.xhtml"
  }
}
